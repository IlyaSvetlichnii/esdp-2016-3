<%= simple_form_for @teacher_time, url: update_student_teachertime_path(selection_of_the_cell(time, day)), html: {method: "patch"} do |f| %>
  <%= f.input :student_id, as: :select,collection: @students.map { |s| [s.name, s.id]} %>
  <%= f.hidden_field :status_time_teacher_id, value: 1 %>
  <%= f.submit 'Сохранить студента', class: "btn btn-primary" %>
<% end %>
