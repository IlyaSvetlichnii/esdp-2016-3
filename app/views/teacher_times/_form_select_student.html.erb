<%= simple_form_for @teacher_time, url: teacher_time_path(selection_of_the_cell(time, day)), html: {method: "patch"} do |f| %>
  <%= f.input :student_id, as: :select,collection: @students.map { |s| [s.name, s.id]} %>
  <%= f.hidden_field :status_time_teacher_id, value: 1 %>
  <%= f.submit 'Ok', class: "btn btn-default btn-xs" %>
<% end %>
