<%= simple_form_for @teacher_time do |f| %>
  <%= f.input :student_id, as: :select,collection: @students.map { |s| [s.name, s.id]} %>
  <%= f.hidden_field :day_of_week, value: day %>
  <%= f.hidden_field :status_time_teacher_id, value: 1 %>
  <%= f.hidden_field :teacher_id, value: current_user.id %>
  <%= f.hidden_field :time, value: time %>
  <%= f.submit 'Сохранить изменения', class: "btn btn-primary" %>
<% end %>

<%= simple_form_for @teacher_time do |f| %>
  <%= f.hidden_field :day_of_week, value: day %>
  <%= f.hidden_field :teacher_id, value: current_user.id %>
  <%= f.hidden_field :time, value: time %>
