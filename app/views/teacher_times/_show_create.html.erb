<td align="center" class="vacant">
  <div class='timetable_first_block'>
    <div class='timetable_second_block'>
      <button class="btn" data-toggle="modal" data-target="#myModal<%= day + time %>">
        Изменить
      </button>
    </div>
  </div>
</td>

<div class="modal fade" id="myModal<%= day + time %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= day %>-<%= time %>:00</h4>
      </div>
      <div class="modal-body">
      	<%= render 'form', day: day, time: time %>
      </div>
    </div>
  </div>
</div>

