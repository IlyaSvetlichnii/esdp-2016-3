<%= simple_form_for @lesson, url: create_lesson_path do |f| %>
  <div class="col-md-3">
    <h3><%= f.label "Время: " + @teacher_time.time + ":00" %></h3>
    <%= f.hidden_field :time, value: @teacher_time.time %>
    <h3><%= f.label "Студент: " + student_name(@teacher_time) %></h3>
    <%= f.hidden_field :student_id, value: @teacher_time.student_id %>
    <%= f.hidden_field :student_name, value: student_name(@teacher_time) %>
  </div>
  <div class="col-md-4", id="date_conducted_lesson">
    <span class="input-append date">
      <h4><%= f.label "Дата проведения урока: " %></h4>
      <%= f.text_field :day_of_week, :id => "datepicker", :value => Date.today, class: 'form-control input-sm' %>
    </span>
  </div>
  <%= f.hidden_field :teacher_id, value: @teacher_time.teacher_id %>
  <%= f.hidden_field :teacher_name, value: teacher_name(@teacher_time) %>
  <%= f.hidden_field :teacher_time_id, value: @teacher_time.id %>
  <div class="col-md-12">
    <div class="button_lesson_new">
    	<%= f.button :submit, "Потдтвердить", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
  $('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>