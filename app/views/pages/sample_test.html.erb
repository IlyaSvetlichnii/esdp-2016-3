<div class="container">
	<%= form_tag('/result', method: 'get') do %>
	  <div class="list-group">
	  	<% count = 1 %>
      <% cnt = 1 %>
			<% @questions.each do |question| %>
				<div class="well well-lg">
					<ul class="list-group">
					  <h3><li class="list-group-item list-group-item-info">
					  	<span style="cursor:default", id="<%= question.id %>" >
					  		<%= count %>. <%= question.content %>
					  	</span>
					  </li></h3>
					</ul>
					<ol type="a">
						<% question.answers.order("RANDOM()").each do |answer| %>
						  	<label class="answer_block" for="<%= question.id %>_<%=answer.id %>">
						  		<a class="list-group-item answer" style="cursor:pointer">
                    <span>
                     <div style="display:inline-block;width:3%"><span id="<%= question.id %>"><%= radio_button_tag question.id, answer.id %></span></div>
  						  			<div style="display:inline-block;width:90%"><li style="width:80%">                    
  						  			  <span> <%= answer.content %></span>
  						  			</li></div>
                    </span>
						  		</a>
					  		</label> 
                <% cnt += 1 %>
						<% end %>
					</ol>
				</div>
	  		<% count += 1 %>
		 	<% end %>
	  </div>
	  <%= submit_tag 'Завершить Тест', class: 'btn btn-success', id: 'register', disabled: 'disabled' %>
	<% end %>
</div>
